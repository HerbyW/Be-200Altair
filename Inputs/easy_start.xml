<PropertyList>
    <name>easystart</name>
    <dialog-name>easystart</dialog-name>
    <layout>vbox</layout>
	    <group>
		<layout>hbox</layout>
		<default-padding>1</default-padding>
		<empty>
		<stretch>true</stretch>
		</empty>
		<text>
		    <label>Easy Startup</label>
		</text>
		<empty>
		<stretch>true</stretch>
		</empty>
		<button>
		<legend/>
		<key>Esc</key>
		<pref-width>16</pref-width>
		<pref-height>16</pref-height>
		<border>2</border>
		<command>dialog-apply</command>
		<binding>
		    <command>nasal</command>
		    <script>controls.selectAllEngines()</script>
		</binding>
                <binding>
		    <command>nasal</command>
		    <script>controls.startEngine(0)</script>
		</binding>
                <binding>
		    <command>dialog-close</command>
                </binding>
		</button>
	    </group>
	    <hrule/>
	    <group>
		<layout>vbox</layout>
		<text>
		    <label>When done you MUST Close that window</label>
		    <halign>center</halign>
		</text>
		<hrule/>
		<hrule/>
	    </group>
            
	    <hrule/>
	    <group>
                <layout>hbox</layout>
                <text>
                    <label>Prepare Electricals</label>
                    <halign>center</halign>
                </text>
            </group>
	    <hrule/>
	    <group>
                <layout>hbox</layout>
                <text>
                    <label>BATTERY SWITCH</label>
                    <halign>center</halign>
                </text>
	    </group>
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>Battery</legend>
		    <live>true</live>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/electrical/switch/battery</property>
			<value>1</value>
		    </binding>
                </button>
	    </group>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>MASTER SWITCHES</label>
                    <halign>center</halign>
                </text>
	    </group>
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>Unlock</legend>
		    <live>true</live>
		    <enable>
			<property>fdm/jsbsim/electrical/supplier/battery-on</property>
		    </enable>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/master-switch-lock-cmd</property>
		    </binding>
                </button>
		<button>
		     <legend>ON</legend>
		    <live>true</live>
		    <enable>
			<property>fdm/jsbsim/animation/master-switch-lock-cmd</property>
		    </enable>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/animation/master-switch-cmd</property>
			<value>1</value>
		    </binding>
                </button>
		</group>
