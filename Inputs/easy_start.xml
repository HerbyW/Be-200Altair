	    <hrule/>
	    <group>
                <layout>hbox</layout>
                <text>
                    <label>Brake-parking Engaged</label>
                    <halign>left</halign>
                </text>
		<checkbox>
		     <halign>right</halign>
		    <property>/controls/gear/brake-parking</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <binding>
                        <command>property-toggle</command>
			<property>/controls/gear/brake-parking</property>
		    </binding>
                </checkbox>
            </group>
	    <hrule/>
	    <group>
                <layout>hbox</layout>
                <text>
                    <label>Nose-Wheel-Steer_engaged</label>
                    <halign>left</halign>
                </text>
		<checkbox>
		    <halign>right</halign>
		    <property>fdm/jsbsim/gear/NWS/engaged</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <binding>
