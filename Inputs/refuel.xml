<PropertyList>
    <name>refuel</name>
    <layout>vbox</layout>
    <text><label>Refueling on ground</label></text>
    
    <group>
        <layout>hbox</layout>
        <text>
            <label>Tanks Configuration</label>
            <halign>left</halign>
        </text>
        <button>
            <enable>
                <property>fdm/jsbsim/systems/behaviour/steady-onground</property>
            </enable>	
            <legend>Extra tanks for long distance flights</legend>
            <default>true</default>
            <halign>right</halign>
            <binding>
                <command>property-assign</command>
                <property>/sim/model/waterloading</property>
                <value>0</value>
            </binding>
        </button>
        <button>
            <enable>
                <property>fdm/jsbsim/systems/behaviour/steady-onground</property>
            </enable>	
            <legend>Normal tanks</legend>
            <default>true</default>
            <halign>right</halign>
            <binding>
                <command>property-assign</command>
                <property>/sim/model/waterloading</property>
                <value>1</value>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        <button>
            <enable>
                <property>fdm/jsbsim/systems/behaviour/steady-onground</property>
            </enable>	
            <halign>center</halign>
            <legend>Refuel Over all - Requested  Max quantity </legend>
            <default>true</default>
            <equal>true</equal>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling1_up-sw</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling2_up-sw</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling3_up-sw</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling4_up-sw</property>
                <value>1</value>
            </binding>
        </button>
        <text>
            <label>Maximum</label>
            <halign>left</halign>
        </text>
        <input>
            <halign>right</halign>
            <pref-width>80</pref-width>
            <property>fdm/jsbsim/systems/tanks/tank/total-capacity-lbs</property>
            <live>true</live>
            <color>
                <red>1.0</red>
                <green>0.80</green>
                <blue>0.80</blue>
            </color>
            <editable>false</editable>
        </input>
    </group>
    <hrule/>
    <group>
        <layout>hbox</layout>
        <text>
            <label>======== Refuel Quantity per Tank ========</label>
            <halign>center</halign>
        </text>
    </group>
    <group>
        <layout>table</layout>
        <text>
            <label>Tank Left Wing quantity Lbs </label>
            <halign>left</halign>
            <row>0</row>
            <col>0</col>
        </text>
        <text>
            <label>Maximum</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
        <input>
            <halign>right</halign>
            <row>0</row>
            <col>2</col>
            <pref-width>80</pref-width>
            <property>fdm/jsbsim/systems/tanks/tank/tank1-capacity-lbs</property>
            <live>true</live>
            <color>
                <red>1.0</red>
                <green>0.80</green>
                <blue>0.80</blue>
            </color>
            <editable>false</editable>
        </input>
        <input>
            <halign>right</halign>
            <row>0</row>
            <col>3</col>
            <enable>
                <property>fdm/jsbsim/systems/behaviour/steady-onground</property>
            </enable>
            <property>fdm/jsbsim/inertia/pointmass-weight-lbs[1]</property>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live>true</live>
        </input>
        <text>
            <label>Tank Center Left  quantity Lbs </label>
            <halign>left</halign>
            <row>1</row>
            <col>0</col>
        </text>
        <text>
            <label>Maximum</label>
            <halign>right</halign>
            <row>1</row>
            <col>1</col>
        </text>
        <input>
            <halign>right</halign>
            <row>1</row>
            <col>2</col>
            <pref-width>80</pref-width>
            <property>fdm/jsbsim/systems/tanks/tank/tank2-capacity-lbs</property>
            <live>true</live>
            <color>
                <red>1.0</red>
                <green>0.80</green>
                <blue>0.80</blue>
            </color>
            <editable>false</editable>
        </input>
        <input>
            <halign>right</halign>
            <row>1</row>
            <col>3</col>
            <enable>
                <property>fdm/jsbsim/systems/behaviour/steady-onground</property>
            </enable>
            <property>fdm/jsbsim/inertia/pointmass-weight-lbs[2]</property>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live>true</live>
        </input>
        <text>
            <label>Tank Center Right  quantity Lbs </label>
            <halign>left</halign>
            <row>2</row>
            <col>0</col>
        </text>
        <text>
            <label>Maximum</label>
            <halign>right</halign>
            <row>2</row>
            <col>1</col>
        </text>
        <input>
            <halign>right</halign>
            <row>2</row>
            <col>2</col>
            <pref-width>80</pref-width>
            <property>fdm/jsbsim/systems/tanks/tank/tank3-capacity-lbs</property>
            <live>true</live>
            <color>
                <red>1.0</red>
                <green>0.80</green>
                <blue>0.80</blue>
            </color>
            <editable>false</editable>
        </input>
        <input>
            <halign>right</halign>
            <row>2</row>
            <col>3</col>
            <enable>
                <property>fdm/jsbsim/systems/behaviour/steady-onground</property>
            </enable>
            <property>fdm/jsbsim/inertia/pointmass-weight-lbs[3]</property>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live>true</live>
        </input>
        <text>
            <label>Tank Right Wing quantity Lbs </label>
            <halign>left</halign>
            <row>3</row>
            <col>0</col>
        </text>
        <text>
            <label>Maximum</label>
            <halign>right</halign>
            <row>3</row>
            <col>1</col>
        </text>
        <input>
            <halign>right</halign>
            <row>3</row>
            <col>2</col>
            <pref-width>80</pref-width>
            <property>fdm/jsbsim/systems/tanks/tank/tank4-capacity-lbs</property>
            <live>true</live>
            <color>
                <red>1.0</red>
                <green>0.80</green>
                <blue>0.80</blue>
            </color>
            <editable>false</editable>
        </input>
        <input>
            <halign>right</halign>
            <row>3</row>
            <col>3</col>
            <enable>
                <property>fdm/jsbsim/systems/behaviour/steady-onground</property>
            </enable>
            <property>fdm/jsbsim/inertia/pointmass-weight-lbs[4]</property>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <live>true</live>
        </input>
    </group>
    <hrule/>
    <group>
        <layout>hbox</layout>
        <text>
            <label> Total tanks - Real time quantity Lbs </label>
            <halign>left</halign>
        </text>
        <input>
            <property>/fdm/jsbsim/propulsion/tanks-pointmass-qty</property>
            <binding>
                <command>dialog-update</command>
            </binding>
            <live>true</live>
        </input>
    </group>
    
    <hrule/>
    <group>
        <layout>hbox</layout>
        <button>
            <legend>Close</legend>
            <default>true</default>
            <key>Esc</key>
            <padding>10</padding>
            <command>dialog-apply</command>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling1_up-sw</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling2_up-sw</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling3_up-sw</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/fuel/refueling4_up-sw</property>
                <value>0</value>
            </binding>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
</PropertyList>
