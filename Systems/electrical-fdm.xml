<system name="electrical">


    <property>electrical/circuit-breakers/cabin-lights-pwr</property>
    <property>electrical/circuit-breakers/instr-ignition-switch</property>
    <property>electrical/switches/flashing-beacon</property>
    <property>electrical/circuit-breakers/flaps</property>
    <property>electrical/circuit-breakers/turn-coordinator</property>
    <property>electrical/switches/nav-lights</property>
    <property>electrical/circuit-breakers/instrument-lights</property>
    <property>electrical/switches/strobe-lights</property>
    <property>electrical/switches/taxi-lights</property>
    <property>electrical/switches/landing-lights</property>
    <property>electrical/switches/pitot-heat</property>
    <property value="0">animation/master-switch-lock-cmd</property>
    <property value="0">animation/master-switch-cmd</property>
    
    
    <channel name="Instruments">
    
    <switch name="animation/master-switch-lock">
            <default value="0"/>
            <test logic="OR" value="1">
                animation/master-switch-lock-cmd == 1
            </test>
        </switch>

        <switch name="animation/electrical-master-switch">
            <default value="0"/>
            <test logic="AND" value="1">
                animation/master-switch-lock  == 1
                animation/master-switch-cmd == 1
            </test>
            <output>animation/master-switch-cmd</output>
        </switch>


        <!--FIXME temporary placed in electrical-fdm-->
        <kinematic name="electrical/switch/master-timer">
            <input>animation/electrical-master-switch</input>
            <traverse>
                <setting>
                    <position>0</position>
                    <time>0</time>
                </setting>
                <setting>
                    <position>1</position>
                    <time>0.5</time>
                </setting>
            </traverse>
            <output>electrical/switch/master</output>
        </kinematic>

 </channel>

<channel name="electrical">



        <!--supplier-->
        <switch name="electrical/supplier/battery-volts">
            <default value="0"/>
            <test  logic="AND" value="28">
                electrical/supplier/battery-on == 1
            </test>
            <output>/systems/electrical/suppliers/battery</output>
        </switch>
        <switch name="electrical/supplier/alternator-volts">
            <default value="0"/>
            <test  logic="AND" value="28.7">
                electrical/supplier/alternator-on == 1
            </test>
            <output>/systems/electrical/suppliers/alternator</output>
        </switch>
        <switch name="electrical/supplier/external-volts">
            <default value="0"/>
            <test  logic="AND" value="29">
                electrical/supplier/external-on == 1
            </test>
            <output>/systems/electrical/suppliers/external</output>
        </switch>
        <switch name="electrical/supplier/emergency-volts">
            <default value="0"/>
            <test  logic="AND" value="28.7">
                electrical/supplier/emergency-on == 1
            </test>
            <output>/systems/electrical/suppliers/emergency</output>
        </switch>

        <switch name="electrical/source-volts">
            <default value="0"/>
            <test  logic="AND" value="electrical/supplier/battery-volts">
                electrical/supplier/battery-on == 1
                electrical/supplier/battery-volts gt  electrical/supplier/alternator-volts
                electrical/supplier/battery-volts gt  electrical/supplier/emergency-volts
                electrical/supplier/battery-volts gt electrical/supplier/external-volts
                electrical/switch/master == 1
            </test>
            <test  logic="AND" value="electrical/supplier/alternator-volts">
                electrical/supplier/alternator-on == 1
                electrical/switch/master == 1
            </test>
            <test  logic="AND" value="electrical/supplier/external-volts">
                electrical/supplier/external-on == 1
                electrical/switch/master == 1
            </test>
            <test  logic="AND" value="electrical/supplier/emergency-volts">
                electrical/supplier/emergency-on == 1
                electrical/switch/master == 1
            </test>
        </switch>



        <!--bus-->
        <switch name="electrical/bus/master-volts">
            <default value="0"/>
            <test  logic="AND" value="electrical/source-volts">
                electrical/switch/master == 1
            </test>
        </switch>

        <switch name="electrical/bus/master-avionic-volts">
            <default value="0"/>
            <test  logic="AND" value="electrical/bus/master-volts">
                electrical/switch/master == 1
            </test>
        </switch>

        <switch name="electrical/bus/auxiliary-volts">
            <default value="0"/>
            <test  logic="AND" value="electrical/bus/master-volts">
                electrical/switch/master == 1
            </test>
        </switch>

       <!-- temporary-->
       <switch name="electrical/generic/outputs-on">
           <default value="0"/>
           <test  logic="AND" value="1">
               electrical/switch/master == 1
           </test>
        </switch>


        <switch name="electrical/avionic/instruments-on">
            <default value="0"/>
            <test  logic="AND" value="1">
                electrical/switch/master == 1
            </test>
        </switch>

        <switch name="master avionics">
            <default value="0"/>
            <test  logic="AND" value="1">
                electrical/switch/master == 1
            </test>
            <output>electrical/switches/master-avionics</output>
        </switch>
        <!-- ==================from generic-electrical===not useful at the moment,  wants to be included  later on  with switches and breaker systems===============-->
