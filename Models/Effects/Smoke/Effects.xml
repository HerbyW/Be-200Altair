<?xml version="1.0"?>

<!--
 
HerbyW 2015

-->


<PropertyList>

<!--Sillage coque centre-->
    <model>
        <name>CFlux</name>
        <path>Aircraft/Be-200Altair/Models/Effects/Smoke/Cflux.xml</path>
	<condition>            
                <or>
                    <greater-than>
                        <property>sim/multiplay/generic/float[8]</property>
                        <value>0.5</value>
                    </greater-than>
                    <greater-than>
                        <property>sim/multiplay/generic/float[9]</property>
                        <value>0.5</value>
                    </greater-than>
                </or>           
        </condition>
        <offsets>
            <x-m>11</x-m>
            <y-m>0</y-m>
            <z-m>-2.5</z-m>
            <pitch-deg>90.5</pitch-deg>
            <heading-deg>0</heading-deg>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>
    <!--Sillage coque coté Gauche LINKS-->
    <model>
        <name>GFlux</name>
        <path>Aircraft/Be-200Altair/Models/Effects/Smoke/Gflux.xml</path>
	<condition>            
                <or>
                    <greater-than>
                        <property>sim/multiplay/generic/float[8]</property>
                        <value>0.5</value>
                    </greater-than>
                    <greater-than>
                        <property>sim/multiplay/generic/float[9]</property>
                        <value>0.5</value>
                    </greater-than>
                </or>           
        </condition>
        <offsets>
            <x-m>5</x-m>
            <y-m>-1.2</y-m>
            <z-m>-2.5</z-m>
            <pitch-deg>90.5</pitch-deg>
            <heading-deg>-0.3</heading-deg>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>
    <!--Sillage coque coté Droit RECHTS-->
    <model>
        <name>DFlux</name>
        <path>Aircraft/Be-200Altair/Models/Effects/Smoke/Dflux.xml</path>
	<condition>            
                <or>
                    <greater-than>
                        <property>sim/multiplay/generic/float[8]</property>
                        <value>0.5</value>
                    </greater-than>
                    <greater-than>
                        <property>sim/multiplay/generic/float[9]</property>
                        <value>0.5</value>
                    </greater-than>
                </or>           
        </condition>
        <offsets>
            <x-m>5</x-m>
            <y-m>1.2</y-m>
            <z-m>-2.5</z-m>
            <pitch-deg>90.5</pitch-deg>
            <heading-deg>0.3</heading-deg>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>

    <!--Rear Spray-->
    <model>
        <name>Effet</name>
        <path>Aircraft/Be-200Altair/Models/Effects/Smoke/jetdo.xml</path>
	<condition>            
                <or>
                    <greater-than>
                        <property>sim/multiplay/generic/float[8]</property>
                        <value>0.5</value>
                    </greater-than>
                    <greater-than>
                        <property>sim/multiplay/generic/float[9]</property>
                        <value>0.5</value>
                    </greater-than>
                </or>           
        </condition>
	<offsets>
            <x-m>10</x-m>
            <y-m>0</y-m>
            <z-m>-1</z-m>
            <pitch-deg>90.5</pitch-deg>
            <heading-deg>0</heading-deg>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>


    <!--Sillage Flotteur Gauche Schwimmer Links-->
    <model>
        <name>GFlux1</name>
        <path>Aircraft/Be-200Altair/Models/Effects/Smoke/Gflux1.xml</path>
	<condition>
            <and>
                <equals>
                    <property>sim/multiplay/generic/float[7]</property>
                    <value>1.0</value>
                </equals>
                <equals>
                    <property>sim/multiplay/generic/float[13]</property>
                    <value>1</value>
                </equals>
            </and>
        </condition>
        <offsets>
            <x-m>3.30</x-m>
            <y-m>-13.10</y-m>
            <z-m>-2.0</z-m>
            <pitch-deg>90</pitch-deg>
            <heading-deg>0</heading-deg>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>

    <!--Sillage Flotteur Droite Schwimmer Rechts-->
    <model>
        <name>DFlux1</name>
        <path>Aircraft/Be-200Altair/Models/Effects/Smoke/Dflux1.xml</path>
	<condition>
            <and>
                <equals>
                    <property>sim/multiplay/generic/float[7]</property>
                    <value>1.0</value>
                </equals>
                <equals>
                    <property>sim/multiplay/generic/float[12]</property>
                    <value>1</value>
                </equals>
            </and>
        </condition>
        <offsets>
            <x-m>3.30</x-m>
            <y-m>13.10</y-m>
            <z-m>-2.0</z-m>
            <pitch-deg>90</pitch-deg>
            <heading-deg>0</heading-deg>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>



    <animation>
        <type>translate</type>
        <object-name>CFlux</object-name>
	<object-name>GFlux</object-name>
	<object-name>DFlux</object-name>
        <object-name>Effet</object-name>
        <property>sim/multiplay/generic/float[6]</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-10</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>-10</dep>
            </entry>
            <entry>
                <ind>15</ind>
                <dep>0</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0.0</y>
            <z>1</z>
        </axis>
    </animation>



</PropertyList>
