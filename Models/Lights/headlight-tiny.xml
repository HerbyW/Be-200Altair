<PropertyList>
 <path>lightcone-tiny.ac</path>

    <!--Lights-->
 
 <animation>
    <type>noshadow</type>
    <object-name>lightcone-tiny</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>lightcone-tiny</object-name>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>
  </effect>
 
  <animation>  
   <object-name>lightcone-tiny</object-name> 
  </animation>  

  <!-- working for Rembrandt -->
 
  <animation>
    <type>material</type>
    <object-name>lightcone-tiny</object-name>
    <emission>
      <factor-prop>controls/switches/cabin</factor-prop>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation> 
 
 <animation>
		<type>scale</type>
		<x-offset>16</x-offset>
                <y-offset>16</y-offset>
                <z-offset>16</z-offset>                
	</animation>
 
<!--Spot lights-->

<animation>
   <type>light</type>
   <light-type>spot</light-type>
   <object-name>lightcone-tiny</object-name>
   <nopreview/>
   <position>
     <x>0.0</x>
     <y>0.0</y>
     <z>0.0</z>
   </position>
   <direction>
     <x>0.0</x>
     <y>0.0</y>
     <z>-1.0</z>
   </direction>
   <ambient>
     <r>0.03</r>
     <g>0.03</g>
     <b>0.03</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.6</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.65</r>
     <g>0.65</g>
     <b>0.65</b>
     <a>1.00</a>
   </specular>
   <dim-factor>
	<property>controls/switches/cabin</property>
	<factor>1</factor>
	<offset>0</offset>
	<min>0</min>
	<max>1</max>
   </dim-factor>
   <attenuation>
     <c>1.0</c>
     <l>0.002</l>
     <q>0.00005</q>
   </attenuation>
   <exponent>30.0</exponent>
   <cutoff>22</cutoff>
   <near-m>0</near-m>
   <far-m>10</far-m>
 </animation>
 
 <animation>
	  <type>select</type>	  
	  <condition>
		  <property>controls/switches/cabin</property>		  
	  </condition>
  </animation>

</PropertyList> 