<!-- Exhaust gas temperature indicator UT-7A-710 3D instrument for Tu-134 -->
<PropertyList>

  <path>ut7a.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle_1</object-name>
    <object-name>needle_2</object-name>
    <object-name>cache</object-name>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitre</object-name>
  </effect>                                        -->

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle_1</object-name>
    <object-name>needle_2</object-name>
    <object-name>cache</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

<!--Needles-->
  <animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>/engines/engine[1]/n2</property>
    <factor> 1 </factor>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	190.0</dep></entry>
      <entry><ind>	60.7</ind>	<dep>	324.0</dep></entry>
      <entry><ind>	99.6</ind>	<dep>	465.0</dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle_2</object-name>
    <property>/engines/engine[1]/n2</property>
    <factor> 3.6 </factor>
    <offset-deg> 90 </offset-deg>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m>  0.00022 </y-m>
      <z-m> -0.01067 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
