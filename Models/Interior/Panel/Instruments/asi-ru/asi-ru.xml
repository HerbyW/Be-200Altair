<PropertyList>
  
  <path>asi-ru.ac</path>
  
  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>index</object-name>
    <object-name>needle</object-name>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitre</object-name>
  </effect>                                      -->

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>index</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry><ind>   0.00 </ind><dep>   3 </dep></entry>
      <entry><ind>  81.00 </ind><dep>  12 </dep></entry>
      <entry><ind> 108.00 </ind><dep>  29 </dep></entry>
      <entry><ind> 162.00 </ind><dep>  66 </dep></entry>
      <entry><ind> 215.98 </ind><dep> 106 </dep></entry>
      <entry><ind> 270.00 </ind><dep> 149 </dep></entry>
      <entry><ind> 378.00 </ind><dep> 230 </dep></entry>
      <entry><ind> 540.00 </ind><dep> 353 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>index</object-name>
    <property>autopilot/settings/target-speed-kt</property>
   <interpolation>
      <entry><ind>   0.00 </ind><dep>   3 </dep></entry>
      <entry><ind>  81.00 </ind><dep>  12 </dep></entry>
      <entry><ind> 108.00 </ind><dep>  29 </dep></entry>
      <entry><ind> 162.00 </ind><dep>  66 </dep></entry>
      <entry><ind> 215.98 </ind><dep> 106 </dep></entry>
      <entry><ind> 270.00 </ind><dep> 149 </dep></entry>
      <entry><ind> 378.00 </ind><dep> 230 </dep></entry>
      <entry><ind> 540.00 </ind><dep> 353 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
