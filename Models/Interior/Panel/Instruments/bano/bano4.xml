<!-- Light switches block -AN-12
3D instrument for Tu-154 -->
<PropertyList>
 <path>bano.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>handle_1</object-name>
  <object-name>handle_2</object-name>
  <object-name>handle_3</object-name>
  <object-name>base_1</object-name>
  <object-name>base_2</object-name>
  <object-name>base_3</object-name>
  <object-name>base_4</object-name>  
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <offset>0.1</offset>
      <red>   0.11 </red>
      <green> 0.11 </green>
      <blue>  0.11 </blue>
    </emission>
</animation>


<animation>
  <type>rotate</type>
  <object-name>handle_1</object-name>
  <property>instrumentation/nav[0]/power-btn</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_2</object-name>
  <property>instrumentation/nav[1]/power-btn</property> 
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_3</object-name>
  <property>instrumentation/transponder/serviceable</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Control-->
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
        <command>property-toggle</command>
        <property>instrumentation/nav[0]/power-btn</property>
      </binding>
  </action>
</animation>
