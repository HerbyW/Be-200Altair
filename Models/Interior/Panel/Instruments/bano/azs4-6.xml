<!-- AZS type 4
3D instrument for Tu-154 -->
<PropertyList>
 
 <path>azs_3.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>handle</object-name>
  <object-name>base_1</object-name>
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.21 </red>
      <green> 0.21 </green>
      <blue>  0.21 </blue>
    </emission>
</animation>

  
<animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <property>controls/switches/headlight-mode</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	2.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Control-->
<animation>
  <type>pick</type>
  <object-name>hotspot_3</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("controls/switches/headlight-mode", 2.0, 0.1 );
      </script>
    </binding>
    <binding> 
	<command>property-assign</command>
	 <property>sim/multiplay/generic/int[10]</property>
	 <value type="int">1</value>
     </binding>
     <binding> 
	<command>property-assign</command>
	 <property>sim/multiplay/generic/int[9]</property>
	 <value type="int">0</value>
     </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("controls/switches/headlight-mode", 1.0, 0.1 );
      </script>
    </binding>
    <binding> 
	<command>property-assign</command>
	 <property>sim/multiplay/generic/int[9]</property>	 
	 <value type="int">0</value>
     </binding>
     <binding> 
	<command>property-assign</command>	 
	 <property>sim/multiplay/generic/int[10]</property>
	 <value type="int">0</value>
     </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("controls/switches/headlight-mode", 0.0, 0.1 );
      </script>
    </binding>
    <binding> 
	<command>property-assign</command>
	 <property>sim/multiplay/generic/int[9]</property>
	 <value type="int">1</value>
     </binding>
     <binding> 
	<command>property-assign</command>
	 <property>sim/multiplay/generic/int[10]</property>
	 <value type="int">0</value>
     </binding>
  </action>
</animation>



</PropertyList>
