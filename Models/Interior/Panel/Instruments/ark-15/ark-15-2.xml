<!--Controls-->
<animation>
  <type>pick</type>
  <object-name>hs_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("controls/switches/adf-2-selector", 0.0, 0.1 );
      </script>
    </binding>
  </action>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>ADF-Ident2</tooltip-id>
      <label>Ident: %s</label>
      <property>instrumentation/adf[1]/ident</property>      
    </binding>
  </hovered>
</animation>
