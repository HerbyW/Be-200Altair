  <property>instrumentation/kurs-mp-2/digit-h-ones</property>
  <factor>35.5</factor>
  <center>
    <x-m>-0.02664</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.00025</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>


<animation>
  <type>rotate</type>
  <object-name>dig_f_hi</object-name>
  <property>instrumentation/kurs-mp-2/digit-f-hi</property>
  <interpolation>
    <entry><ind>	108.0</ind>	<dep>	-4.0</dep></entry>
    <entry><ind>	117.0</ind>	<dep>	313.0</dep></entry>
  </interpolation>
  <center>
    <x-m>-0.01672</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.0059</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>dig_f_low</object-name>
  <property>instrumentation/kurs-mp-2/digit-f-low</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-2.0</dep></entry>
    <entry><ind>	95.0</ind>	<dep>	338.0</dep></entry>
  </interpolation>
  <center>
    <x-m>-0.02751</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.00618</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Controls-->
<!--Radial-->
<animation>
  <type>pick</type>
  <object-name>hs_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/kurs-mp-2/digit-h-hund</property>
      <step>-1.0</step>
      <min>0.0</min>
      <max>3.0</max>
      <wrap>false</wrap>
    </binding>
    <binding>
      <command>nasal</command>
      <script>help.kursmp_sync(1)</script>
    </binding>    
  </action>
</animation>

