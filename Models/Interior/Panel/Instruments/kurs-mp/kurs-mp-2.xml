<!-- KURS-MP control gauge
3D instrument for Tu-154 -->

<PropertyList>

<path>kurs-mp.ac</path>

<!--External panel lighting-->

<animation>
  <type>material</type>
  <object-name>base_1</object-name>
  <object-name>base_2</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>

<!-- Internal instruments lighting -->

<animation>
  <type>material</type>
  <object-name>digits</object-name>
  <object-name>mhz</object-name>
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>



<!--Selector lamps-->

<!--Have voltage?-->
<animation>
  <type>material</type>
  <object-name>na</object-name>
  <object-name>ot</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>controls/switches/gauge-light</factor-prop>
  </emission>
</animation>


<animation>
  <type>select</type>
  <object-name>na</object-name>
  <condition>
    <property>instrumentation/nav[1]/to-flag</property>
 </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>ot</object-name>
  <condition>
    <property>instrumentation/nav[1]/from-flag</property>
  </condition>
</animation>
  



<animation>
  <type>rotate</type>
  <object-name>dig_h_hund</object-name>
  <property>instrumentation/kurs-mp-2/digit-h-hund</property>
  <factor>35.5</factor>
  <center>
    <x-m>-0.02664</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.00025</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>dig_h_dec</object-name>
  <property>instrumentation/kurs-mp-2/digit-h-dec</property>
  <factor>35.5</factor>
  <center>
    <x-m>-0.02664</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.00025</z-m>
  </center>
  <axis>
