<!-- indicators on captain panel
3D instrument for Tu-154 -->
<PropertyList>
 <path>warning88white.ac</path>
 
 <!-- Internal instruments lighting -->
 
 <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <object-name>cover_2</object-name>
 </effect>
 
 <animation>
   <type>material</type>
   <object-name>cover_2</object-name>    
   
   <emission>      
     <red>   0.35 </red>
     <green> 0.35 </green>
     <blue>  0.35 </blue>
   </emission>
 </animation>
   
<!--Water dropping signal -->


<animation>
  <type>material</type>
  <object-name>text_2</object-name>
   <condition> 
     <and>
     <equals>
	<property>/sim/model/bomb-signal</property>
	<value>0</value>
      </equals>
	<equals>	
	<property>/sim/model/waterbombing</property>
	<value>1</value>
      </equals>
	<equals>
	<property>/sim/model/waterloading</property>
	<value>1</value>
      </equals>
	<equals>
	<property>fdm/jsbsim/fcs/water-door-cmd-norm</property>
	<value>0</value>
      </equals>
	<equals>
	<property>fdm/jsbsim/fcs/water-intake-cmd-norm</property>
	<value>1</value>
      </equals>
      <greater-than>
	<property>fdm/jsbsim/fcs/water-qty-liters</property>
	<value>6990</value>
      </greater-than>
      </and>          
  </condition> 
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>    
  </emission>
</animation>

<animation>
  <type>pick</type>
  <object-name>text_2</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-assign</command>
      <property>/sim/model/bomb-signal</property>
      <value>1</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/sim/model/waterbombing</property>
      <value>1</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/sim/model/waterloading</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>fdm/jsbsim/fcs/water-door-cmd-norm</property>
      <value>1</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>fdm/jsbsim/fcs/water-intake-cmd-norm</property>
      <value>0</value>
    </binding>
  </action>
</animation>

</PropertyList>