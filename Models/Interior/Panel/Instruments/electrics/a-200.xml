<!-- Check lamps on captain panel button
3D instrument for Tu-154 -->
<PropertyList>
 <path>200_a.ac</path>
 <!-- Internal instruments lighting -->
 <animation>
   <type>material</type>
   <object-name>base</object-name>
   <object-name>needle</object-name>
   <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
 </animation>
 <!--External panel lighting-->
 <animation>
   <type>material</type>
   <object-name>cover</object-name>
   <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
 </animation>

  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>systems/electrical/suppliers/alternator</property>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-119.0</dep></entry>
      <entry><ind>	4.0</ind>	<dep>	-104.0</dep></entry>
      <entry><ind>	7.0</ind>	<dep>	-89.0</dep></entry>
      <entry><ind>	15.0</ind>	<dep>	-13.0</dep></entry>
      <entry><ind>	30.0</ind>	<dep>	123.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>



</PropertyList>
